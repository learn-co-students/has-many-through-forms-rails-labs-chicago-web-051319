<%= form_for @post do |f| %>
    <%= f.label "Title" %><br>
    <%= f.text_field :title %><br>
    <%= f.label "Content" %><br>
    <%= f.text_area :content %><br>
    <hr>
    <%= f.label "Categories- select all that apply:" %><br>
    <%= f.collection_check_boxes :category_ids, @categories, :id, :name, include_hidden: false%><br>
    <%= f.label "Create a new category:" %><br>
    <%= f.fields_for :categories, @post.categories.build do |categories_fields| %>
        <%= categories_fields.text_field :name %>
    <% end %><br>
<%= f.submit %>
<% end %>